html, body{
    height: 100%;
}
body {
  background: url(<%= asset_path 'bg/escheresque_ste.png' %>);
  color: #2E3A38;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 62.5%;
}

.row{
  padding: 5px;
  h1{
    text-align: center;
  }
  h1+.btn-success, p+.btn-success{
    margin-bottom: 5px;
    margin-left: 10px;
  }
}

li,p{
  font-size: 1em;
}

.container{
  max-width: 1200px;
}

main.wrapper{
  padding: 0;
  min-height: 100%;
  height: auto !important;
  height: 100%;
  background-color: #eee;
}

header.navbar{
  margin-bottom: 0;
}

img{
  max-width: 100%;
  height: auto;
  opacity: .8;
}

.banner{
  height: 320px;
  background: url(<%= asset_path 'space.jpg' %>) no-repeat;
  position: relative;
}

.banner-caption{
  color: white;
  position: absolute;
  bottom: 30px;
  right: 0;
  width: 40%;
  padding: 0 15px;
  text-align: center;
  background-color: rgba(0,0,0,0.6);
}

.steps{
  text-align: center;
}

h2{
  font-size: 4.5em;
  font-weight: 600;
}

.row .glyphicon{
  font-size: 3em;
  color: rgb(160,2,255);
}

footer{
  width: 100%;
  color: white;
  p{
    margin: 0 0 5px 0;
  }
  ul{
    list-style: none;
    padding: 0;
  }
  .container{
    background: url(<%= asset_path 'bg/stardust.png' %>);
  }
  div div:first-child a{
    font-size: 1em;
  }
}

.sign{
    text-align: center;
    margin-bottom: 5px;
    .well{
      margin-bottom: 0;
    }
}

#error_explanation{
    border: 2px solid red;
    border-radius: 6px;
  ol{
    padding-left: 25px;
  }
  h2{
    font-size: 16px;
    margin: 5px 0;
    font-weight: bold;
  }
}

.gritter-with-image p{
  font-size: 14px;
}

.row.about{
  .col-lg-12{
    padding: 0 45px;
  }
  ul{
    margin-bottom: 0;
  }
  h3{
    text-align: center;
    &.how_it_works{
      margin-top: 0;
    }
  }
  p,li{
    font-size: 16px;
  }
}

.index_hover{
  img{
    border: 2px solid transparent;
    border-radius: 5px;
    &:hover, &:active, &:focus{
      opacity: 1;
      border: 2px solid grey;
    }
  }
}



@media screen and (max-width: 1200px){
  .container{
    min-width: 100%;
  }
}

@media screen and (max-width: 992px){
    
  footer ul li{
    display: inline-block;
    margin-left: 15px;
    &:first-child{
      margin-left: 0;
    }
  }

  .banner-caption{
    width: 45%;
  }

}

@media screen and (max-width: 768px){
  .banner-caption{
    bottom: 0;
    width: 100%;
  }
}








