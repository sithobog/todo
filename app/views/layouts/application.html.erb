<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>DoItWisely</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="body">
  <main class="container wrapper">
  <%= render 'home/header' %>
    <% if notice %>
      <%= js add_gritter(flash[:notice], :image => :success, :time =>3000) %>
    <% end %>
    <% if alert %>
      <%= js add_gritter(flash[:alert], :image => :warning, :time => 3000) %>
    <% end %>
    <%= yield %>
    <div class="push"></div>
  </main>
  <%= render 'home/footer' %>
</body>
</html>
