<div class="container">
  <h1>Goals</h1>
  <% if @goals.empty? %>
    <p><%= @user.name %> does not have goals</p>
  <% end %>
  <% if goals_owner? %>
    <%= link_to "New goal", new_user_goal_path %><br>
  <% end %>
  <%= div_for(@goals,class: "well col-md-4") do |goal| %>
    <%= image_tag goal.image.url(:thumb) %>
    <%= goal.name %> | <%= link_to 'Show', user_goal_path(@user,goal) %></li>
  <% end %>
</div>