<div class="form_wrapper well">
<%= form_for [@user,@goal] do |f| %>
  
  <% if @goal.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@goal.errors.count, "error") %> prohibited
        this goal from being saved:
      </h2>
      <ol>
        <% @goal.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ol>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :term %>
    <%= f.date_field :term %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
    <p>File format: *.jpg, *.png, *.gif</p>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
</div>
