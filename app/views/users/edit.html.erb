<div class="container">
  <div class="form_wrapper well" >
    <%= form_for (@user) do |f| %>


    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :avatar %>
        <%= f.file_field :avatar %>
        <p>File format: *.jpg, *.png, *.gif</p>
      </div>

      <div class="actions">
        <%= f.submit "Update User", :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>